include ../../../../views/helpers/mixins

mixin cash-payment()
  .cash-payment
    .cash-payment__title Пополнение баланса
    .cash-payment__form
      form(action='/' method='POST')
        .form
          .form__item: .form__label Сумма пополнения
          .form__item: .form__subitem: +input('text', 'Введите сумму...')
          .form__item
            .select-digit
              ul 
                li: a(href='#300'): span 300
                li: a(href='#900'): span 900
                li: a(href='#1500'): span 1500
                li: a(href='#3000'): span 3000
                li: a(href='#3500'): span 3500
          .form__item
            button.btn.btn-full.btn-big Пополнить